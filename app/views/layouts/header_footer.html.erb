<script>
	function download_doc_file(){
		$.ajax({
			type: "get",
			url: "/download_documentation", 
			success: function(msg){ 
				if(msg.trim() == ""){
					alert("Brochure File not available.");
					return;
				}
				url="/download_file?file_name="+encodeURIComponent(msg); 
				$("#iframe_download_div").html("");
				var iframe='<iframe name="file_download" id="file_download" style="display:none;" src="'+url +'"  ></iframe>'
				$("#iframe_download_div").html(iframe);   
			}
		});	 
	}
	
	function submit_query(){
		var name = $("#contact-name-6").val();
		var email = $("#contact-email-6").val();
		var message = $("#contact-message-6").val();
		$.ajax({
			type: "post",
			url: "/send_mail", 
			data:"name="+name+"&email="+email+"&message="+message,
			success: function(msg){ 
				alert(msg);  
			}
		});	 
	}
</script>
